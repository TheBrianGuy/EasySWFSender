<div class="container style2">

<h1>Listing Messages</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date-Time</th>
      <th>Fwd msg to</th>
      <th>Msg from site</th>
      <th>Msg from email</th>
      <th>Msg from ipaddress</th>
      <th>Msg subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to "#{message.created_at.strftime("%a %B %d %Y at %I:%M %P %Z")}", message %></td>
        <td><%= link_to "#{message.fwd_msg_to}", message %></td>
        <td><%= link_to "#{message.msg_from_site}", message %></td>
        <td><%= link_to "#{message.msg_from_email}", message %></td>
        <td><%= link_to "#{message.msg_from_ipaddress}", message %></td>
        <td><%= link_to "#{message.msg_subject}", message %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>