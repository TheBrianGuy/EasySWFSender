<div class="container form-session">

  <h2>Forgot your password?</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%#= devise_error_messages! %>

    <%= f.email_field :email, placeholder: "Email", required: true, autofocus: true %>
    <%= f.submit "Send me reset password instructions", class: "btn btn-default form-btn" %>
  <% end %>

  <hr>
  <%= render "devise/shared/links" %>
  <hr>

</div>
