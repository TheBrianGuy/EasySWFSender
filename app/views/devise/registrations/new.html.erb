<div class="container form-session">

  <h2>Sign up</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%#= devise_error_messages! %>

    <%= f.text_field :name, placeholder: "Your Name", required: true, autofocus: true %>
    <%= f.email_field :email, placeholder: "Email", required: true %>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "Password", skip_label: true, required: true, autocomplete: "off" %>
    <%= f.password_field :password_confirmation, placeholder: "Password", required: true, autocomplete: "off" %>
    <%= f.submit "Sign up", class: "btn btn-default form-btn" %>

  <% end %>

  <hr>
  <%= render "devise/shared/links" %>
  <hr>

</div>