<div class="container form-session">
  <h2>Resend confirmation instructions</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
    <%#= devise_error_messages! %>

    <%= f.email_field :email, placeholder: "Email", required: true, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    <%= f.submit "Resend confirmation instructions", class: "btn btn-default form-btn" %>
  <% end %>

  <hr>
  <%= render "devise/shared/links" %>
  <hr>
</div>